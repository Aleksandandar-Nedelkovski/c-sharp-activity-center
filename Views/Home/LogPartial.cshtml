@using BELTEXAM.Models
@model Login

<form asp-action="Login" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="LoginEmail"></label><br>
        <input asp-for="LoginEmail" class="form-control">
        <b>
            <span asp-validation-for="LoginEmail" class="text-danger"></span>
        </b>
    </div>
    <div class="form-group">
        <label asp-for="LoginPassword"></label><br>
        <input asp-for="LoginPassword" class="form-control">
        <b>
            <span asp-validation-for="LoginPassword" class="text-danger"></span>
        </b>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>